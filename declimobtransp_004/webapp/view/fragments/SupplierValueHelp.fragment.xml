<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<TableSelectDialog
		id="myDialog"
		title="{i18n>dialogSupplier}"
		search="onHandleSearch"
		confirm="onValueHelpSupplierOk"
		cancel="onValueHelpSupplierCancel"
		items="{
			path : '/ZFI_CDS_PROVIDER',
			sorter : {
				path : 'lifnr_Text',
				descending : false
			}
		}"
	>
		<ColumnListItem vAlign="Middle">
			<cells>
				<Text text="{lifnr}" />
				<Text text="{lifnr_Text}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="6rem">
				<header>
					<Text text="{i18n>dialogSupplierCode}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="100%">
				<header>
					<Text text="{i18n>dialogSupplierDescription}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>

</core:FragmentDefinition>